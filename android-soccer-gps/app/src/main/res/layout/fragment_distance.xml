<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DistanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFirstHalfTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Half"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartFirstHalf"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tvSecondHalfTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Half"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartSecondHalf"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tvDistanceOverTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance Over Time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartDistanceOverTime"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
</ScrollView>
